#include <stdlib.h>
#include <stdio.h>
#include <time.h>
int** create_user(int a);
void print();
int check(int a, int b);
void* count();
void* compare();
int** mas, i, n, j, cor = 0, col = 0;
int* arr1, * arr2;
int main()
{
    check(n, 0);
    mas = create_user(n);
    puts("\n Your matrix:");
    print();
    count();
    compare();
    free(mas);
    return (0);
}
int** create_user(int a) {//ф-ция создание  матрицы(вручную)
    mas = calloc(n, sizeof(int*));
    for (i = 0; i < n; i++) {
        mas[i] = (int*)calloc(n, sizeof(int));
        for (j = 0; j < n; j++)
            check(mas[i][j], 2);
    }
    return (mas);
}

int check(int a, int b) {//ф-ция Ввода матрицы
    int flag = 0;
    if (b == 0) {
        puts("How rows and columns in your matrix?");
        do {
            flag = scanf_s("%d", &n);
        } while (flag == 0 || n < 0);
        return(n);
    }
    if (b == 2) {
        printf_s("Enter element ");
        flag = scanf_s("%d", &mas[i][j]);
    } return (mas[i][j]);

}
void print()
{//ф-ция вывода матрицы
    for (i = 0; i < n; i++) {
        printf_s("\n ");
        for (j = 0; j < n; j++)
            printf_s("%4d ", mas[i][j]);
    }
    puts("\n");
}
void* count() {
    int k = 0;
    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++)
            cor++;
    }//count cisel nad diagonal
    arr1 = calloc(cor, sizeof(int));
    arr2 = calloc(cor, sizeof(int));
    puts("\n");
    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            k++;
            arr1[k] = mas[i][j];
        }
    }
    puts("\n");
    k = 0;
    for (j = 0; j < n - 1; j++) {
        for (i = j + 1; i < n; i++) {
            k++;
            arr2[k] = mas[i][j];
        }
    }
    return NULL;
}
void* compare() {//проверка на симметричность
    for (int k = 1; k < cor + 1; k++) {
        if (arr1[k] == arr2[k]) {
            col++;
        }
    }
    puts("\n");
    if (col == cor && cor != 0)
        printf_s("\n Your matrix is symmetric\n\n\n\n");
    else
        puts("\n Your matrix is not symmetric\n\n\n\n");
    return(NULL);
}
