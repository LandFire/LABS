#include<stdio.h>
#include<locale.h>

int main()
{
	setlocale(LC_ALL, "Russian");

	int a, b, c, s0 ,s1 ,s2;

	printf("Введите 3 числа:\n");			//ввод данных
	scanf_s("%d%d%d", &a ,&b,&c);

	if (a >= 0)	s0 = a * a;					//условие выполнения программы 
	if (a<0)    s0 = a;

	if (b >= 0) s1 = b * b; 				//условие выполнения программы 
	if (b < 0)  s1 = b;

	if (c >= 0) s2 = c * c;					//условие выполнения программы 
	if (c < 0)  s2 = c;

	printf("Ответ:%d,%d,%d\n", s0,s1,s2);   //выводим на экран результат

	return 0;
}



//15. Ввести с клавиатуры три числа, положительные возвести в квадрат, а отрицательные оставить без изменений.
