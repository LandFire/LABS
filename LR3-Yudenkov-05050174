#include<stdio.h>
#include<locale.h>

int main()
{
	setlocale(LC_ALL, "Russian");

	int a, a1, b, b1, c, c1;																	//дни, месеца, года двух дат

	int sum1, sum2;																			    //количество дней между датами, полных лет

	printf("\n    Введите временной промежуток!\n\n    Пример:(21.11.1991-10.05.1996)\n\n");	//задача с примером

	scanf_s("%d.%d.%d-%d.%d.%d", &a, &b, &c, &a1, &b1, &c1);								    //ввод промежутка времени

	if (a, a1 < 32)																				//условия правильного выполнения задачи
		if (b, b1 < 13)
			if (c, c > 0)
			{
				sum1 = (a1 + (((c1 - 1) * 365.25) + ((b1 - 1) * 30.416))) - (a + (((c - 1) * 365.25) + ((b - 1) * 30.416)));			//подсчёт количества дней между датами

				sum2 = (sum1 / 365.25);															//подсчёт количества полных лет

				printf("\n    количество дней прошедших между двумя датами: %d\n", sum1);		//вывод на экран
				printf("\n    количество полных лет: %d\n", sum2);

			}
			else printf("\nВы допустили ошибку!\n");													//вывод на экран в случае ошибки

	printf("\n");																				//вспомогательное, украшает вид
	printf("\n");
	printf("\n");

	return 0;			//10. Даны натуральные числа a, b, c и a1, b1, c1, где a, a1 – означают день, b, b1 – месяц, c, c1 – год.
}                       //Вычислить количество дней прошедших между двумя датами и количество полных лет.
